# Upskill Advisor Backend Environment Configuration

# Database Configuration
DATABASE_URL=sqlite:///./upskill_advisor.db

# Pinecone Configuration (Optional - for vector storage)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX=upskill-advisor-courses
PINECONE_ENVIRONMENT=us-west1-gcp-free

# Embedding Model Configuration (Local Models)
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
# Alternative embedding models:
# EMBEDDING_MODEL_NAME=all-mpnet-base-v2
# EMBEDDING_MODEL_NAME=paraphrase-MiniLM-L6-v2

# Local LLM Configuration
LOCAL_LLM_MODEL=microsoft/DialoGPT-medium
# Alternative local models:
# LOCAL_LLM_MODEL=microsoft/DialoGPT-large
# LOCAL_LLM_MODEL=gpt2
# LOCAL_LLM_MODEL=distilgpt2

# Cross-Encoder Model Configuration
CROSS_ENCODER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Application Configuration
APP_NAME=Upskill Advisor Backend
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# File Paths
COURSES_JSON=courses.json
JD_SOURCE_PATH=job_descriptions

# Cache Configuration
CACHE_TTL=3600
ENABLE_CACHE=true

# Local Model Cache Directory
TRANSFORMERS_CACHE=./models_cache
HF_HOME=./models_cache

# Performance Configuration
MAX_WORKERS=4
BATCH_SIZE=32
MAX_SEQUENCE_LENGTH=512

# Feature Flags
USE_LOCAL_LLM=true
USE_CROSS_ENCODER=true
USE_PINECONE=false
ENABLE_JD_INGESTION=true

